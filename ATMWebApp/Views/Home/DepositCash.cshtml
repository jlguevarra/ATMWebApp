@{
    ViewBag.Title = "Deposit Money";
}

<div class="deposit-container">
    <h2>Deposit Money</h2>

    @if (TempData["Message"] != null)
    {
        <p class="success-message">@TempData["Message"]</p>
    }

    @if (TempData["Error"] != null)
    {
        <p class="error-message">@TempData["Error"]</p>
    }

    <form method="post" action="@Url.Action("DepositFunds", "Home")">
        <label for="amount">Deposit Amount (₱100 - ₱100,000):</label>
        <input type="number" id="amount" name="amount" min="100" max="100000" step="100" required>
        <small class="note">Amount must be a multiple of ₱100.</small>
        <br />

        <label for="accountType">Select Account Type:</label>
        <select id="accountType" name="accountType" required>
            <option value="" disabled selected>Select Account</option>
            <option value="Current">Current Account</option>
            <option value="Savings">Savings Account</option>
        </select>
        <br />

        <button type="submit" class="btn">Deposit</button>
    </form>

    <a href="@Url.Action("MainMenu", "Home")" class="btn back">Back</a>
</div>

<style>
    body {
        text-align: center;
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .deposit-container {
        background: white;
        max-width: 400px;
        padding: 20px;
        margin: 50px auto;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 26px;
        margin-bottom: 15px;
        color: #333;
    }

    label {
        font-size: 18px;
        display: block;
        margin-top: 10px;
        font-weight: bold;
    }

    input, select {
        font-size: 18px;
        padding: 10px;
        width: 100%;
        margin-top: 5px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .note {
        font-size: 14px;
        color: #666;
    }

    .btn {
        font-size: 18px;
        padding: 12px;
        width: 100%;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 10px;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .back {
        background-color: gray;
        text-align: center;
        display: block;
        margin-top: 10px;
    }

        .back:hover {
            background-color: darkgray;
        }

    .success-message {
        color: green;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .error-message {
        color: red;
        font-weight: bold;
        margin-bottom: 10px;
    }
</style>
