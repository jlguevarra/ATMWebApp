@{
    ViewBag.Title = "Change PIN";
}

<div class="change-pin-container">
    <h2>Change PIN</h2>

    @if (TempData["Message"] != null)
    {
        <p class="success-message">@TempData["Message"]</p>
    }
    @if (TempData["Error"] != null)
    {
        <p class="error-message">@TempData["Error"]</p>
    }

    <form method="post" action="@Url.Action("ChangePin", "Home")">
        <label for="currentPin">Current PIN:</label>
        <input type="password" id="currentPin" name="currentPin" pattern="\d{6}" title="Enter a 6-digit PIN" maxlength="6" required>

        <label for="newPin">New PIN:</label>
        <input type="password" id="newPin" name="newPin" pattern="\d{6}" title="Enter a 6-digit PIN" maxlength="6" required>

        <label for="confirmNewPin">Confirm New PIN:</label>
        <input type="password" id="confirmNewPin" name="confirmNewPin" pattern="\d{6}" title="Enter a 6-digit PIN" maxlength="6" required> <br />

        <button type="submit" class="btn">Change PIN</button>
    </form>

    <a href="@Url.Action("MainMenu", "Home")" class="btn back">Back</a>
</div>

<style>
    /* Ensure full-page alignment */
    body {
        background-color: #f4f4f4;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        text-align: center; /* Keeps text aligned */
    }

    /* Centering the container */
    .change-pin-container {
        width: 90%;
        max-width: 400px;
        margin: 80px auto;
        padding: 25px;
        background: white;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h2 {
        font-size: 24px;
        margin-bottom: 15px;
    }

    label {
        font-size: 16px;
        display: block;
        margin-top: 15px;
    }

    input {
        font-size: 18px;
        padding: 8px;
        width: 100%;
        max-width: 250px;
        margin-top: 5px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn {
        font-size: 18px;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s;
        display: block;
        width: 100%;
        max-width: 250px;
        margin: 20px auto;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .back {
        background-color: gray;
    }

        .back:hover {
            background-color: darkgray;
        }

    .success-message {
        color: green;
        font-weight: bold;
    }

    .error-message {
        color: red;
        font-weight: bold;
    }
</style>
