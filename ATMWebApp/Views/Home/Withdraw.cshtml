@{
    ViewData["Title"] = "Withdraw Cash";
}

<div class="withdraw-container">
    <h2>Withdraw Cash</h2>

    @if (ViewBag.Message != null)
    {
        <p class="success-message">@ViewBag.Message</p>
    }

    <form method="post" action="@Url.Action("Withdraw", "Home")">
        <label for="amount">Amount to Withdraw:</label>
        <input type="number" id="amount" name="amount" min="100" step="100" required> <br />

        <button type="submit" class="btn">Withdraw</button>
    </form>

    <a href="@Url.Action("MainMenu", "Home")" class="btn back">Back</a>
</div>

<style>
    body {
        text-align: center;
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }

    .withdraw-container {
        margin-top: 50px;
    }

    h2 {
        font-size: 28px;
        margin-bottom: 20px;
    }

    label {
        font-size: 18px;
        display: block;
        margin-bottom: 10px;
    }

    input {
        font-size: 18px;
        padding: 10px;
        width: 250px;
        margin-bottom: 20px;
    }

    .btn {
        font-size: 20px;
        padding: 10px;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #b02a37;
        }

    .back {
        background-color: gray;
        margin-top: 10px;
        display: inline-block;
    }

        .back:hover {
            background-color: darkgray;
        }

    .success-message {
        color: green;
        font-weight: bold;
    }

    .error-message {
        color: red;
        font-weight: bold;
    }
</style>
