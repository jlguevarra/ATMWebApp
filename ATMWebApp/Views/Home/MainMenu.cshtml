@{
    ViewBag.Title = "Main Menu";
}

<div class="menu-container">
    <h2>Welcome to Northland ATM</h2>
    <p>Select an option below:</p>

    <div class="menu-buttons">
        <a href="@Url.Action("Withdraw", "Home")" class="btn">Withdraw Cash</a>
        <a href="@Url.Action("CheckBalance", "Home")" class="btn">Check Balance</a>
        <a href="@Url.Action("TransferFunds", "Home")" class="btn">Transfer Funds</a>
        <a href="@Url.Action("ChangePin", "Home")" class="btn">Change PIN</a>
        <a href="@Url.Action("MiniStatement", "Home")" class="btn">History</a>
        <a href="@Url.Action("DepositCash", "Home")" class="btn">Cash Deposit</a>
    </div>

    <div class="logout-container">
        <a href="@Url.Action("Logout", "Home")" class="btn logout">Logout</a>
    </div>
</div>

<style>
    /* Keep the body normal to avoid shifting the header */
    body {
        background-color: #f4f4f4;
        font-family: 'Poppins', sans-serif;
        text-align: center;
        margin: 0;
        padding: 0;
    }

    /* Center the menu without affecting the header */
    .menu-container {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 90%;
        max-width: 400px;
        margin: 50px auto;
        text-align: center;
    }

    h2 {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
    }

    p {
        font-size: 16px;
        color: #555;
        margin-bottom: 20px;
    }

    /* Button Grid */
    .menu-buttons {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
    }

    .btn {
        font-size: 16px;
        padding: 12px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
        transition: background 0.3s ease-in-out;
        display: block;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    /* Logout Button */
    .logout-container {
        margin-top: 20px;
    }

    .logout {
        background-color: red;
        padding: 12px 30px;
        font-size: 16px;
        font-weight: bold;
    }

        .logout:hover {
            background-color: darkred;
        }
</style>
